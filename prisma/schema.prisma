generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SaasProduct {
  id              String    @id @default(cuid())
  name            String
  overview        String    @db.Text
  url             String
  partners        String[]
  thumbnail       String?   @db.Text
  category        String
  planeIssueId    String?
  planeProjectId  String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@map("saas_products")
}
